<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="proximity_toggle"
        android:title="@string/pref_title_proximity_toggle"
        android:summary="@string/pref_description_proximity_toggle"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="sample_rate"
        android:title="@string/pref_title_sample_rate"
        android:defaultValue="@string/pref_default_sample_rate"
        android:summary="@string/pref_description_sample_rate"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
